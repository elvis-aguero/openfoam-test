FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      adaptiveStopDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

adaptiveStop
{
    enabled         yes;
    maxU            1e-3;
    maxDeltaAlpha   1e-4;
    minTime         0.5;
    window          0.5;
    minSamples      3;
    checkInterval   0.5;
}

